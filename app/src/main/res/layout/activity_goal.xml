<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#FFFFFF">

        <TextView
            android:text="용사의 하루"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/back"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/backicon"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:background="#F98F2C"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/ddaytext"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/insertgoal"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/ddaytext"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxLength="10"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:hint="10글자 이내의 목표를 입력해주세요"/>
        <TextView
            android:id="@+id/whatisdday"
            android:layout_below="@+id/insertgoal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="15sp"/>

        <DatePicker
            android:id="@+id/dpday"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/whatisdday"
            android:calendarViewShown="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/comeon"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/dpday"
            android:textColor="#0c74fb"
            android:gravity="center"/>

        <Button
            android:background="@drawable/goalfinishtab"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:id="@+id/buttondday"
            android:text="완료"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_below="@+id/comeon"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>