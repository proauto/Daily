<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#FFFFFF">

        <TextView
            android:text="용사의 하루"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/buttonback"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/backicon"/>

        <Button
            android:id="@+id/buttoninventory"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonsetting"
            android:layout_toStartOf="@+id/buttonsetting"
            android:background="@drawable/invenicon" />

        <Button
            android:id="@+id/buttonsetting"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/seticon" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sharelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/itemscreenbackground">

    <TextView
        android:id="@+id/toptext"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myweapontxt"/>

    <ImageView
        android:id="@+id/equip"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/toptext"
        android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/bottomtext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/equip"
            android:layout_above="@+id/buttonshare"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonshare"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="공유"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/sharebox"/>
    </RelativeLayout>

</LinearLayout>