<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bigback"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/goalchangebackground">
    <Button
        android:id="@+id/backbutton"
        android:background="@drawable/goalbackicon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/goaltext"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backbutton"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/voidbar"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/success"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_below="@+id/goaltext"
        android:layout_toLeftOf="@+id/voidbar"
        android:layout_toStartOf="@+id/voidbar"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/successbackground"/>
    <Button
        android:id="@+id/giveup"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_below="@+id/goaltext"
        android:layout_toRightOf="@+id/voidbar"
        android:layout_toEndOf="@+id/voidbar"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/giveupbackground"/>
    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_above="@+id/caution"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:background="@drawable/goalcharacter"/>
    <TextView
        android:id="@+id/caution"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textColor="#FFFFFF"/>

</RelativeLayout>