<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="#FFFFFF">

        <TextView
            android:text="스탑워치"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/back"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/backicon"/>

        <Button
            android:id="@+id/buttoninventory"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/buttonsetting"
            android:layout_toStartOf="@+id/buttonsetting"
            android:background="@drawable/invenicon" />

        <Button
            android:id="@+id/buttonsetting"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/seticon" />

    </RelativeLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:background="@drawable/stopwatchtitle"
        android:textSize="20sp"
        android:text="스.탑.워.치"
        android:textColor="#FFFFFF"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/buttonstart"
            android:id="@+id/textView2" />
        <Chronometer
            android:id="@+id/chronmeter1"
            android:layout_marginTop="60dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_alignParentTop="true" />

        <ToggleButton
            android:id="@+id/buttonstart"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:textOff="시 작"
            android:textOn="스 톱"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/chronmeter1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/stopwatchpink"/>

        <Button
            android:text="초기화"
            android:id="@+id/buttonend"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/chronmeter1"
            android:textColor="#ff5548"
            android:textSize="20sp"
            android:background="@drawable/stopwatchpinkline"/>
        <Button
            android:text="마킹"
            android:id="@+id/buttonmarking"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/chronmeter1"
            android:textColor="#ff5548"
            android:textSize="20sp"
            android:background="@drawable/stopwatchpinkline"/>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/buttonstart"
            android:layout_marginTop="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </ScrollView>
    </RelativeLayout>
</LinearLayout>